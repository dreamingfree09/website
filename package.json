{
  "name": "piqniq",
  "version": "2.0.0",
  "description": "Tech community platform for developers and enthusiasts",
  "main": "app.js",
  "scripts": {
    "start": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/start-server.ps1 -External",
    "kill:port": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/kill-port.ps1",
    "start:clean": "npm run kill:port && npm run start",
    "dev": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/dev-server.ps1",
    "dev:clean": "npm run kill:port && npm run dev",
    "seed:curated": "node scripts/seedCuratedContent.js",
    "postinstall": "patch-package",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__",
    "rbac:seed": "node scripts/seed-rbac-test-users.js",
    "rbac:smoke": "node scripts/rbac-smoke-run-and-clean.js",
    "admin:bootstrap": "node scripts/bootstrap-superadmin.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health": "curl http://localhost:3000/api/system/health",
    "chat:smoke": "node scripts/chat-smoke-test.js",
    "chat:rooms:curate": "node scripts/curate-chat-rooms.js",
    "chat:ui": "node scripts/chat-ui-sanity.js",
    "logs:view": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log"
  },
  "keywords": [
    "community",
    "forum",
    "tech",
    "developers",
    "social"
  ],
  "homepage": "https://github.com/dreamingfree09/piqniq#readme",
  "bugs": {
    "url": "https://github.com/dreamingfree09/piqniq/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreamingfree09/piqniq.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "dompurify": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "highlight.js": "^11.11.1",
    "jest": "^30.2.0",
    "marked": "^17.0.1",
    "mongoose": "^7.4.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "nodemon": "^3.0.1",
    "patch-package": "^8.0.1",
    "rss-parser": "^3.13.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.3",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "socket.io-client": "^4.8.3"
  }
}
