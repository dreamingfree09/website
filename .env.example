# .env.example
#
# Environment configuration template.
# Copy this file to `.env` and replace placeholder values.

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/piqniq

# Docker Compose MongoDB credentials (used by docker-compose.yml)
# NOTE: If your password contains special characters, URL-encode it if you embed it in MONGODB_URI.
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme

# Session Secret (Generate a strong random string)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS Configuration (comma-separated origins for production)
ALLOWED_ORIGINS=http://localhost:3000

# Base URL (used for email links)
BASE_URL=http://localhost:3000

# Email Configuration (Development - uses Ethereal Email for testing)
ETHEREAL_USER=test@ethereal.email
ETHEREAL_PASS=test123

# Email Configuration (Production - uncomment and use your SMTP provider)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@piqniq.com
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Cookie Security
# The server derives secure cookies from BASE_URL when NODE_ENV=production.
# To override explicitly (e.g., behind a reverse proxy), set:
# COOKIE_SECURE=true

# Privacy-minded hashing salt (used for pseudonymizing some telemetry like IP/user-agent)
# PII_HASH_SALT=replace-with-random-secret

# Logging
# LOG_MAX_BYTES=10485760

# Rate Limiting
# API_RATE_LIMIT=100
# AUTH_RATE_LIMIT=5
# POST_RATE_LIMIT=10

# File Upload Settings
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=./uploads

# Application URLs
# APP_URL=http://localhost:3000
# CLIENT_URL=http://localhost:3000
